<%= form_with(model: actual_outfit, local: true, class: "space-y-8") do |f| %>
  
  <%# エラー表示 %>
  <% if actual_outfit.errors.any? %>
    <div class="bg-red-50 text-red-700 p-4 rounded-xl border border-red-100">
      <ul class="list-disc list-inside text-sm">
        <% actual_outfit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white p-6 sm:p-8 rounded-3xl shadow-sm border border-stone-100">
    
    <%# --- 1. 日付と時間帯 (横並び) --- %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
      
      <%# 日付 %>
      <div>
        <%= f.label :worn_on, "日付", class: "block text-sm font-bold text-stone-500 mb-2" %>
        <%= f.date_field :worn_on, class: "w-full bg-stone-50 border-stone-200 rounded-xl px-4 py-3 font-serif font-bold text-stone-700 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <%# 時間帯 (ビジュアル選択) %>
      <div>
        <label class="block text-sm font-bold text-stone-500 mb-2">時間帯</label>
        <div class="grid grid-cols-2 gap-3">
          <% ActualOutfit.time_slots.keys.each do |key| %>
            <% 
              # デザイン定義
              style = case key
                when 'morning'    then { color: 'peer-checked:bg-sky-50 peer-checked:border-sky-300 peer-checked:text-sky-700', icon: 'fa-sun text-sky-300' }
                when 'day'        then { color: 'peer-checked:bg-blue-50 peer-checked:border-blue-300 peer-checked:text-blue-700', icon: 'fa-cloud-sun text-blue-300' }
                when 'night'      then { color: 'peer-checked:bg-orange-50 peer-checked:border-orange-300 peer-checked:text-orange-700', icon: 'fa-moon text-orange-300' }
                when 'late_night' then { color: 'peer-checked:bg-stone-100 peer-checked:border-stone-400 peer-checked:text-stone-700', icon: 'fa-star text-stone-400' }
              end
            %>
            <label class="cursor-pointer">
              <%= f.radio_button :time_slot, key, class: "peer sr-only" %>
              <div class="h-full py-3 px-2 rounded-xl border border-stone-200 bg-white hover:bg-stone-50 transition flex flex-col items-center justify-center gap-1 text-stone-400 <%= style[:color] %> ring-2 ring-transparent peer-checked:ring-2 peer-checked:ring-offset-1">
                <i class="fas <%= style[:icon] %> text-xl mb-1"></i>
                <span class="text-xs font-bold"><%= I18n.t("enums.actual_outfit.time_slot.#{key}") %></span>
              </div>
            </label>
          <% end %>
        </div>
      </div>
    </div>

    <%# --- 2. アイテム選択 --- %>
    <div class="mb-8">
      <%= f.label :item_id, "着た服", class: "block text-sm font-bold text-stone-500 mb-2" %>
      <div class="relative">
        <i class="fas fa-tshirt absolute left-4 top-1/2 transform -translate-y-1/2 text-stone-300"></i>
        <%= f.collection_select :item_id, Item.all, :id, :name, { prompt: "クローゼットから選択..." }, { class: "w-full pl-10 bg-stone-50 border-stone-200 rounded-xl px-4 py-3 font-bold text-stone-700 focus:ring-indigo-500 focus:border-indigo-500" } %>
      </div>
      <p class="text-xs text-right mt-2">
        <%= link_to "+ 新しい服を登録", new_item_path, class: "text-indigo-500 hover:text-indigo-700 font-bold" %>
      </p>
    </div>

    <%# --- 3. 会った人 (任意) --- %>
    <div class="mb-8">
      <%= f.label :contact_id, "会った人 (任意)", class: "block text-sm font-bold text-stone-500 mb-2" %>
      <div class="relative">
        <i class="fas fa-user-friends absolute left-4 top-1/2 transform -translate-y-1/2 text-stone-300"></i>
        <%= f.collection_select :contact_id, Contact.all, :id, :name, { include_blank: "選択なし" }, { class: "w-full pl-10 bg-stone-50 border-stone-200 rounded-xl px-4 py-3 font-bold text-stone-700 focus:ring-indigo-500 focus:border-indigo-500" } %>
      </div>
    </div>

    <%# --- 4. メモ & 写真 --- %>
    <div class="mb-8">
      <%= f.label :memo, "ひとことメモ", class: "block text-sm font-bold text-stone-500 mb-2" %>
      <%= f.text_area :memo, rows: 3, class: "w-full bg-stone-50 border-stone-200 rounded-xl px-4 py-3 text-stone-700 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "楽しかった！少し寒かったかも。" %>
    </div>
  </div>

  <%# --- 送信ボタン --- %>
  <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-4">
    <%= link_to "キャンセル", :back, class: "w-full sm:w-auto text-center px-8 py-3 rounded-full text-stone-500 font-bold hover:bg-stone-100 transition" %>
    <%= f.button class: "w-full sm:w-auto px-10 py-3 rounded-full bg-indigo-600 text-white font-bold shadow-lg hover:bg-indigo-700 hover:shadow-xl transition transform hover:-translate-y-1 flex items-center justify-center gap-2" do %>
      <i class="fas fa-check"></i>
      記録する
    <% end %>
  </div>

<% end %>