<div class="max-w-xl mx-auto p-4 sm:p-6 lg:p-8 bg-white shadow-xl rounded-xl">
  <div class="flex justify-between items-center mb-6 border-b pb-3">
    <h1 class="text-3xl font-extrabold text-gray-900"><%= @contact.name %> の情報を編集</h1>
  </div>
  
  <%= render 'form', contact: @contact %>

  <div class="mt-8 text-center space-y-4">
    <%= link_to "詳細に戻る", contact_path(@contact), class: "block text-sm text-indigo-600 hover:text-indigo-900 font-medium transition duration-150" %>
    <%= link_to "会う人一覧に戻る", contacts_path, class: "block text-sm text-gray-500 hover:text-gray-700 font-medium transition duration-150" %>
  </div>
</div>