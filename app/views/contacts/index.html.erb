<div class="min-h-screen bg-[#F8F9FA] pb-20 md:pb-6">
  
  <%# --- ヘッダー --- %>
  <div class="bg-white px-4 py-3 sticky top-0 z-30 border-b border-stone-100 md:border-none md:bg-transparent md:static md:pt-6 md:pb-4 md:px-0 max-w-6xl mx-auto">
    <div class="flex items-center justify-between relative">
      <%= link_to root_path, class: "inline-flex items-center gap-2 text-sm font-bold text-stone-500 hover:text-indigo-600 transition group" do %>
        <span class="w-8 h-8 rounded-full bg-stone-100 md:bg-white border border-stone-200 flex items-center justify-center group-hover:border-indigo-300 group-hover:bg-indigo-50 transition">
          <i class="fas fa-arrow-left text-xs"></i>
        </span>
        <span class="hidden md:inline">クローゼットへ戻る</span>
      <% end %>
      
      <%# ★修正: 黒い丸をやめて、わかりやすい「追加」ボタンに変更 %>
      <%= link_to new_contact_path, class: "inline-flex items-center gap-2 px-5 py-2 bg-indigo-600 text-white rounded-full font-bold shadow-md hover:bg-indigo-700 transition transform active:scale-95 text-sm" do %>
        <i class="fas fa-plus"></i>
        <span>追加</span>
      <% end %>
    </div>
  </div>

  <div class="max-w-6xl mx-auto md:px-4">

    <%# --- 検索フォーム --- %>
    <div class="px-4 md:px-0 mb-4 md:mb-8 mt-4">
      <%= form_with url: contacts_path, method: :get, local: true, class: "relative group" do |f| %>
        <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-stone-400 group-focus-within:text-indigo-400 transition"></i>
        <%= f.text_field :query, 
            value: params[:query],
            placeholder: "名前やメモで検索", 
            class: "w-full bg-white border border-stone-200 rounded-xl pl-11 pr-4 py-3 text-sm text-stone-700 placeholder-stone-400 focus:ring-2 focus:ring-indigo-100 focus:border-indigo-300 transition outline-none shadow-sm",
            autocomplete: "off" 
        %>
        <%= f.submit "", class: "hidden" %>
      <% end %>
    </div>

    <%# --- コンテンツエリア --- %>
    <div class="space-y-6 md:space-y-10"> 

      <%# セクション描画用ヘルパー %>
      <% render_section = proc do |title, contacts| %>
        <div>
          <h2 class="text-xs md:text-sm font-bold text-stone-500 mb-2 px-4 md:px-0 flex items-baseline gap-2">
            <%= title %>
            <span class="text-[10px] md:text-xs font-normal text-stone-400">(<%= contacts.count %>)</span>
          </h2>
          
          <div class="bg-white md:bg-transparent rounded-xl overflow-hidden md:overflow-visible shadow-sm md:shadow-none border border-stone-100 md:border-none mx-4 md:mx-0">
            <%# PC版: カードグリッド %>
            <div class="hidden md:grid grid-cols-3 lg:grid-cols-4 gap-4 lg:gap-5">
              <% contacts.each do |contact| %>
                <%= link_to contact_path(contact), class: "block bg-white rounded-xl p-4 shadow-sm border border-stone-100 hover:shadow-md hover:-translate-y-0.5 transition relative group" do %>
                  <% if contact.is_favorite %>
                    <div class="absolute top-2 right-2 text-yellow-400 text-xs z-10"><i class="fas fa-star"></i></div>
                  <% end %>
                  <div class="flex flex-col items-center text-center">
                    <div class="w-20 h-20 rounded-full bg-stone-50 overflow-hidden border-2 border-stone-50 shadow-sm mb-3">
                      <% if contact.avatar.attached? %>
                        <%= image_tag contact.avatar.variant(resize_to_limit: [200, 200]), class: "w-full h-full object-cover transition duration-500 group-hover:scale-110", loading: "lazy" %>
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center text-stone-300 text-2xl"><i class="fas fa-user"></i></div>
                      <% end %>
                    </div>
                    <h3 class="font-bold text-stone-700 text-sm w-full truncate"><%= contact.name %></h3>
                    <%# カテゴリラベル表示 %>
                    <p class="text-[10px] text-stone-400 bg-stone-50 px-2 py-0.5 rounded-full mt-2 w-full truncate">
                      <%= contact.category_label %>
                    </p>
                  </div>
                <% end %>
              <% end %>
            </div>

            <%# スマホ版: LINE風リスト %>
            <div class="md:hidden divide-y divide-stone-50">
              <% contacts.each do |contact| %>
                <%= link_to contact_path(contact), class: "flex items-center p-3 md:p-4 hover:bg-stone-50 transition active:bg-stone-100" do %>
                  <div class="relative mr-3 md:mr-4 shrink-0">
                    <div class="w-12 h-12 rounded-full bg-stone-100 overflow-hidden border border-stone-100">
                      <% if contact.avatar.attached? %>
                        <%= image_tag contact.avatar.variant(resize_to_limit: [100, 100]), class: "w-full h-full object-cover", loading: "lazy" %>
                      <% else %>
                        <div class="w-full h-full flex items-center justify-center text-stone-300"><i class="fas fa-user"></i></div>
                      <% end %>
                    </div>
                    <% if contact.is_favorite %>
                      <div class="absolute -bottom-0.5 -right-0.5 bg-white rounded-full p-0.5 border border-white shadow-sm">
                        <i class="fas fa-star text-[10px] text-yellow-400 block"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="flex-1 min-w-0 pr-2">
                    <div class="flex justify-between items-baseline mb-0.5">
                      <h3 class="font-bold text-stone-700 text-sm truncate"><%= contact.name %></h3>
                      <span class="text-[10px] text-stone-400 shrink-0 ml-2"><%= contact.category_label %></span>
                    </div>
                    <% if contact.memo.present? %>
                      <p class="text-xs text-stone-400 truncate"><%= contact.memo %></p>
                    <% else %>
                      <p class="text-[10px] text-stone-300">ひとことメモなし</p>
                    <% end %>
                  </div>
                  <div class="text-stone-300 pl-1"><i class="fas fa-chevron-right text-xs"></i></div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <%# --- メイン表示ロジック --- %>
      <% if @contacts.any? %>
        
        <%# 1. 大切な人 %>
        <% if @favorites.present? %>
          <% render_section.call("大切な人 / よく会う人", @favorites) %>
        <% end %>

        <%# 2. カテゴリ別ループ（ここが修正ポイント：確実にデータを拾うように変更） %>
        <% @categories_order.each do |cat_key| %>
          <%# 文字列キーとシンボルキーの両方をチェックして取得 %>
          <% list = @grouped_contacts[cat_key] || @grouped_contacts[cat_key.to_sym] %>
          <% next if list.blank? %>
          <% title = I18n.t("enums.contact.category.#{cat_key}") %>
          <% render_section.call(title, list) %>
        <% end %>

        <%# 3. 未分類（カテゴリ未設定のデータ救済） %>
        <% if @grouped_contacts[nil].present? %>
          <% render_section.call("未分類", @grouped_contacts[nil]) %>
        <% end %>

      <% else %>
        <%# データなし %>
        <div class="text-center py-20 px-4 mx-4 md:mx-0 bg-white rounded-3xl border-2 border-dashed border-stone-100 mt-8">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-stone-50 text-stone-300 mb-6">
            <% if params[:query].present? %>
              <i class="fas fa-search text-3xl"></i>
            <% else %>
              <i class="fas fa-user-friends text-3xl"></i>
            <% end %>
          </div>
          <p class="text-stone-500 font-bold mb-2 text-lg">
            <% if params[:query].present? %>
              "<%= params[:query] %>" は見つかりませんでした
            <% else %>
              まだ登録されている人がいません
            <% end %>
          </p>
          <p class="text-stone-400 text-sm mb-8">
            <% if params[:query].present? %>
              別のキーワードで検索してみてください
            <% else %>
              よく会う人や大切な人を登録して<br>コーディネートを記録しましょう
            <% end %>
          </p>
          <% unless params[:query].present? %>
            <%= link_to new_contact_path, class: "inline-flex items-center gap-2 px-8 py-3 bg-stone-800 text-white rounded-full font-bold shadow-lg hover:bg-stone-700 transition transform hover:-translate-y-1" do %>
              <i class="fas fa-plus"></i>
              <span>最初の人を登録する</span>
            <% end %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>