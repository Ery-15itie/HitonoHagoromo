<%- if controller_name != 'sessions' %>
  <%= link_to "ログインに戻る", new_session_path(resource_name), class: "text-sm font-medium text-amber-600 hover:text-amber-700 transition duration-150" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' && controller_name == 'sessions' %>
  <%= link_to "アカウント登録", new_registration_path(resource_name), class: "text-sm font-medium text-amber-600 hover:text-amber-700 transition duration-150 ml-4" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name), class: "text-sm font-medium text-amber-600 hover:text-amber-700 transition duration-150" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "確認メールを再送信", new_confirmation_path(resource_name), class: "text-sm font-medium text-amber-600 hover:text-amber-700 transition duration-150" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "ロック解除の手順を受け取る", new_unlock_path(resource_name), class: "text-sm font-medium text-amber-600 hover:text-amber-700 transition duration-150" %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-sm font-medium text-amber-600 hover:text-amber-700 transition duration-150" %>
  <% end %>
<% end %>