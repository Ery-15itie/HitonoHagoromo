<div class="elegant-font py-10 px-4 sm:px-6 lg:px-8 max-w-2xl mx-auto">
  <div class="bg-white p-8 rounded-xl shadow-2xl border border-gray-100">

    <div class="text-center mb-6">
      <h1 class="text-4xl font-extrabold text-gray-800 mb-2">
        <%= @item.name %>
      </h1>
      <p class="text-lg text-amber-700 font-medium">
        <%# categoryがnilの場合(&.でnilを返し、||で「カテゴリなし」を表示) %>
        <%= @item.category&.name || "カテゴリなし" %>
      </p>
    </div>

    <%# 画像の代わりにプレースホルダー %>
    <div class="h-64 bg-gray-200 flex items-center justify-center text-gray-500 font-medium text-sm rounded-lg mb-8">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
      </svg>
      <span class="ml-2">画像未登録</span>
    </div>

    <%# === アイテム情報セクション === %>
    <div class="space-y-4 border-t border-b border-gray-200 py-6 mb-8">
      
      <%# 価格 %>
      <div class="flex justify-between items-center pb-2 border-b border-gray-100">
        <span class="text-sm font-medium text-gray-600">価格</span>
        <span class="text-base font-semibold text-gray-800">
          <% if @item.price.present? %>
            ¥<%= number_with_delimiter(@item.price) %>
          <% else %>
            未設定
          <% end %>
        </span>
      </div>

      <%# 色 %>
      <div class="flex justify-between items-center pb-2 border-b border-gray-100">
        <span class="text-sm font-medium text-gray-600">色</span>
        <span class="text-base font-semibold text-gray-800">
          <%= @item.color.presence || '未設定' %>
        </span>
      </div>
      
      <%# 登録日 %>
      <div class="flex justify-between items-center">
        <span class="text-sm font-medium text-gray-600">登録日</span>
        <span class="text-base font-semibold text-gray-800">
          <%= l @item.created_at, format: :long %>
        </span>
      </div>
    </div>

    <%# === 説明/メモ === %>
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-800 mb-3 border-b border-amber-50 pb-1">説明・メモ</h2>
      <p class="text-gray-700 whitespace-pre-wrap leading-relaxed bg-gray-50 p-4 rounded-lg">
        <%= @item.description.presence || '特にメモはありません。' %>
      </p>
    </div>

    <%# === アクションボタン === %>
    <div class="flex justify-center space-x-4 border-t border-gray-200 pt-6">
      
      <%# 編集ボタン %>
      <%= link_to edit_item_path(@item), class: "flex items-center space-x-2 bg-amber-500 text-white py-2 px-4 rounded-lg font-semibold hover:bg-amber-600 transition duration-150 shadow-md" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zm-3.146 5.253l-4.243 4.243a1 1 0 00-.293.707v3h3a1 1 0 00.707-.293l4.243-4.243-2.828-2.828z" />
        </svg>
        <span>編集</span>
      <% end %>

      <%# 削除ボタン  %>
      <%= button_to @item, method: :delete, data: { turbo_confirm: '本当にこのアイテムを削除してもよろしいですか？' }, class: "flex items-center space-x-2 bg-red-500 text-white py-2 px-4 rounded-lg font-semibold hover:bg-red-600 transition duration-150 shadow-md" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm4 0a1 1 0 10-2 0v6a1 1 0 102 0V8z" clip-rule="evenodd" />
        </svg>
        <span>削除</span>
      <% end %>
    </div>

    <%# === 戻るリンク === %>
    <div class="mt-8 text-center">
      <%= link_to "アイテム一覧に戻る", items_path, class: "text-gray-600 hover:text-gray-900 text-sm font-medium transition duration-150" %>
    </div>
  </div>
</div>