<div class="elegant-font py-10 px-4 sm:px-6 lg:px-8 max-w-5xl mx-auto">
  
  <%# --- メインカード --- %>
  <div class="bg-white rounded-3xl shadow-2xl shadow-stone-200 border border-white ring-1 ring-stone-100 overflow-hidden">
    
    <div class="md:flex">
      <%# --- [左側] 画像エリア --- %>
      <div class="md:w-1/2 bg-stone-100 relative group">
        <% if @item.image.attached? %>
          <%# 画像がある場合 %>
          <%= image_tag @item.image, class: "w-full h-full object-cover aspect-square md:aspect-auto min-h-[300px] md:min-h-[500px]" %>
          
          <%# 画像上のオーバーレイ（装飾） %>
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition duration-500"></div>
        <% else %>
          <%# 画像がない場合のプレースホルダー %>
          <div class="w-full h-full aspect-square md:aspect-auto min-h-[300px] md:min-h-[500px] flex flex-col items-center justify-center text-stone-300">
            <svg class="w-20 h-20 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span class="text-stone-400 font-bold tracking-widest">NO IMAGE</span>
          </div>
        <% end %>
      </div>

      <%# --- [右側] 情報エリア --- %>
      <div class="md:w-1/2 p-8 md:p-10 flex flex-col bg-white">
        
        <%# ヘッダー情報（カテゴリ・日付） %>
        <div class="flex items-center justify-between mb-4">
          <span class="px-3 py-1 bg-amber-100 text-amber-800 text-xs font-bold rounded-full tracking-wide">
            <%= @item.category&.name || "未分類" %>
          </span>
          <span class="text-stone-400 text-xs font-mono">
            <%= l @item.created_at, format: :long %>
          </span>
        </div>

        <%# アイテム名 %>
        <h1 class="text-3xl md:text-4xl font-bold text-stone-800 leading-tight mb-4">
          <%= @item.name %>
        </h1>
        
        <%# 価格表示 %>
        <div class="mb-8 flex items-baseline gap-1 text-amber-600 border-b border-stone-100 pb-6">
          <span class="text-sm font-bold text-stone-500 mr-2">価格</span>
          <% if @item.price.present? %>
            <span class="text-lg font-bold">¥</span>
            <span class="text-4xl font-extrabold font-mono tracking-tighter">
              <%= @item.price.to_fs(:delimited) %>
            </span>
          <% else %>
             <span class="text-2xl font-bold text-stone-300">---</span>
          <% end %>
        </div>

        <%# 詳細スペック %>
        <div class="space-y-6 flex-grow">
          
          <%# カラー情報（タグ表示） %>
          <div>
            <h3 class="text-xs font-bold text-stone-400 uppercase tracking-wider mb-3 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path></svg>
              Color
            </h3>
            <div class="flex flex-wrap gap-2">
              <% if @item.color.present? %>
                <%# スペース区切りで分割して表示 %>
                <% @item.color.split(/[\s　]+/).each do |c| %>
                  <span class="px-3 py-1.5 bg-stone-100 text-stone-600 text-sm font-bold rounded-md border border-stone-200">
                    <%= c %>
                  </span>
                <% end %>
              <% else %>
                <span class="text-stone-400 text-sm italic">未設定</span>
              <% end %>
            </div>
          </div>

          <%# 説明・メモ %>
          <div>
            <h3 class="text-xs font-bold text-stone-400 uppercase tracking-wider mb-3 flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
              Memo
            </h3>
            <div class="text-stone-600 leading-relaxed whitespace-pre-wrap text-sm md:text-base bg-stone-50 p-4 rounded-xl border border-stone-100">
              <%= @item.description.presence || "メモはありません" %>
            </div>
          </div>
        </div>

        <%# --- アクションボタン --- %>
        <div class="mt-10 pt-6 border-t border-stone-100 grid grid-cols-2 gap-4">
          
          <%# 編集ボタン %>
          <%= link_to edit_item_path(@item), class: "col-span-1 flex items-center justify-center gap-2 bg-stone-800 text-white font-bold py-3 px-4 rounded-xl hover:bg-stone-700 transition shadow-lg shadow-stone-200" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
            編集
          <% end %>

          <%# 削除ボタン (button_toに変更して確実動作) %>
          <%= button_to item_path(@item), method: :delete, form: { class: "col-span-1", data: { turbo_confirm: "本当にこのアイテムを削除しますか？" } }, class: "w-full flex items-center justify-center gap-2 bg-white text-red-500 border-2 border-red-100 font-bold py-3 px-4 rounded-xl hover:bg-red-50 hover:border-red-200 transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            削除
          <% end %>
        </div>

      </div>
    </div>
  </div>

  <%# --- 戻るリンク --- %>
  <div class="mt-8 text-center">
    <%= link_to items_path, class: "inline-flex items-center text-stone-500 hover:text-amber-600 font-medium transition duration-200 group" do %>
      <svg class="w-4 h-4 mr-2 transform group-hover:-translate-x-1 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
      一覧に戻る
    <% end %>
  </div>

</div>